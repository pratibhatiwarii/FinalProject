@page
@model TravelBug.Pages.Packages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Packages</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Name)
            </th>
            <!-- <th>
         @Html.DisplayNameFor(model => model.Package[0].Description)
     </th>-->
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].FlightClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].HotelRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Destination)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Package) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <!-- <td>
         @Html.DisplayFor(modelItem => item.Description)
     </td> -->
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration) days
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
