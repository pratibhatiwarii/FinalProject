@page
@model TravelBug.Pages.Packages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Package Details</h1>

<div>
    <h4>Package</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.FlightClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.FlightClass)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.HotelRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.HotelRating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package.Destination.Name)
        </dd>
    </dl>
</div>


<div>
    <h2>Bookings under this Package</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Package.Bookings[0].Id)</th>
                <th>@Html.DisplayNameFor(model => model.Package.Bookings[0].StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.Package.Bookings[0].EndDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Package.Bookings)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>
                        <a asp-page="/Bookings/Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Package.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
